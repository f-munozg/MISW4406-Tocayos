contains Marketplace, PartnerLifecycleManagement, ContractManagement, ComplianceAndAuditing
contains AffiliateManagement, PaymentEngine, DiscoveryEngine

LoyaltyPrograms [U, OHS] -> [D, ACL] CampaignManagement
LoyaltyPrograms [U, OHS, PL] -> [D, ACL] PartnerLifecycleManagement
LoyaltyPrograms [U, OHS, PL]-> [D, ACL] AnalyticsAndReporting
LoyaltyPrograms [U, OHS, PL] -> [D, CF] ReferralManagement
LoyaltyPrograms [U, OHS] -> [D, ACL] TrackingEngine

TrackingEngine [U, OHS, PL] -> [D, ACL] PaymentEngine

InfluencerMarketing [U, OHS] -> [D, ACL] CampaignManagement
InfluencerMarketing [U, OHS, PL]-> [D, ACL] AnalyticsAndReporting
InfluencerMarketing [U, OHS, PL] -> [D, ACL] PartnerLifecycleManagement
InfluencerMarketing [U, OHS] -> [D, ACL] DiscoveryEngine

CampaignManagement [U, OHS, PL] -> [D, CF] ContentManagement

